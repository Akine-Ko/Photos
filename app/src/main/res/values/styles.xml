<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShapeAppearance.Photos.RoundedSmall" parent="@style/ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_bottom</item>
    </style>

    <style name="TopBarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
