<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/title_profile"
            android:textColor="@color/brand_on_surface"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileSearchLimitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_search_limit_title"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/brand_on_surface" />

        <TextView
            android:id="@+id/profileSearchLimitSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/profile_search_limit_summary"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/brand_outline" />

        <com.google.android.material.slider.Slider
            android:id="@+id/profileSearchLimitSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:valueFrom="0"
            android:valueTo="5"
            android:stepSize="1"
            app:labelBehavior="visible"
            app:tickVisible="true"
            app:trackColorActive="@color/brand_primary"
            app:trackColorInactive="@color/brand_surface_variant"
            app:thumbColor="@color/brand_primary"
            app:haloColor="@color/brand_primary" />

        <TextView
            android:id="@+id/profileClassifierHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/profile_classifier_header"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/brand_on_surface" />

        <TextView
            android:id="@+id/profileClassifierSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/profile_classifier_summary"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/brand_outline" />

        <TextView
            android:id="@+id/profileClassifierStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/brand_on_surface"
            tools:text="已加载 10 个固定分类" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileRunEmbeddingButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/profile_run_embedding_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileRunEmbeddingSampleButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_run_embedding_sample_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileRunClassifierButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/profile_run_classifier_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileRunSampleButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_run_sample_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileClearCategoriesButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_clear_categories_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileClearEmbeddingsButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/profile_clear_features_button"
            app:icon="@drawable/ic_nav_search"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <LinearLayout
            android:id="@+id/profileClassifierProgressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/profileClassifierProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/brand_primary"
                    android:progressBackgroundTint="@color/brand_surface_variant" />

                <TextView
                    android:id="@+id/profileClassifierProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/brand_on_surface"
                    tools:text="已处理 0/0" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profileStopProgressButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/profile_stop_processing"
                app:icon="@drawable/ic_pause"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
