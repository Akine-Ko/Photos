<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_horizontal|bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:layout_gravity="center_horizontal|bottom"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:contentPaddingTop="15dp"
                app:contentPaddingBottom="15dp"
                app:cardBackgroundColor="#EEFFFFFF"
                app:cardCornerRadius="14dp"
                app:cardElevation="12dp"
                app:strokeColor="#08000000"
                app:strokeWidth="0dp"
                android:layout_marginBottom="48dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingRight="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/infoLabelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_name"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/infoLabelDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_time"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/infoLabelSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_size"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoSize"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/infoLabelCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_params"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoCamera"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Exposure block removed per request -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/infoLabelPath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_path"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoPath"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="middle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/infoLabelLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_label_location"
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:layout_marginEnd="18dp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/infoLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#202124"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
