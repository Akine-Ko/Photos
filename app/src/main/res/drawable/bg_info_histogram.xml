<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F6F6FA" />
            <stroke
                android:width="1dp"
                android:color="#14000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:left="8dp"
        android:top="10dp"
        android:right="8dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7A48B9FF"
                android:centerColor="#7ADF6FFF"
                android:endColor="#7AFFA96F"
                android:angle="0" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:left="8dp"
        android:right="8dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7AFF7F50"
                android:centerColor="#7AE85182"
                android:endColor="#7A8FD3FF"
                android:angle="0" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
