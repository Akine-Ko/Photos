<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer white border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.8dp" android:color="#FFFFFFFF" />
        </shape>
    </item>

    <!-- Slight inner shadow -->
    <item android:insetLeft="1.2dp"
        android:insetTop="1.2dp"
        android:insetRight="1.2dp"
        android:insetBottom="1.2dp">
        <shape android:shape="rectangle">
            <corners android:radius="1.6dp" />
            <solid android:color="#26000000" />
        </shape>
    </item>
</layer-list>
